{
  "name": "react-moducks",
  "version": "0.0.1",
  "description": "Example of React and moducks",
  "main": "index.js",
  "scripts": {
    "clean:www": "rm -rf www/*",
    "clean": "npm run clean:www",
    "copy:html": "mkdir -p www/ && cp src/index.html www/",
    "copy:css": "mkdir -p www/assets/css && cp src/css/reset.min.css www/assets/css/",
    "copy:development": "npm run copy:html && npm run copy:css",
    "build:prod": "npm run clean && npm run copy:development && webpack --config webpack.config.prod.js --mode production",
    "build": "npm run clean && npm run copy:development && webpack --mode development",
    "watch:webpack": "webpack --watch --mode development",
    "watch:browser": "browser-sync start --config bs-config.js",
    "watch": "npm run watch:webpack & npm run watch:browser",
    "start": "npm run build && npm run watch"
  },
  "keywords": [],
  "author": "Naoki Sawada",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "grommet": "^1.10.1",
    "moducks": "^0.2.3",
    "react": "^16.2.0",
    "react-bootstrap": "^0.32.1",
    "react-css-modules": "^4.1.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.1",
    "react-router-dom": "^4.2.2",
    "redux": "^4.0.0",
    "redux-actions": "^2.0.1",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0"
  },
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^7.0.0",
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.24.1",
    "browser-sync": "^2.18.6",
    "connect-history-api-fallback": "^1.5.0",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^1.1.11",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.2",
    "style-loader": "^0.20.2",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  }
}
